<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="Item" parent="AppTheme">
        <item name="layoutBackgroundColor">@color/gray</item>
        <item name="textColorSmall">#0a5d0a</item>
        <item name="textColorLarge">#042079</item>
    </style>

    <style name="Item.Expired">
        <item name="layoutBackgroundColor">#ff0</item>
        <item name="textColorSmall">#F00</item>
        <item name="textColorLarge">#8c0000</item>
    </style>

    <style name="ItemTextViewSmall">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Small</item>
        <item name="android:textColor">?attr/textColorSmall</item>
    </style>

    <style name="ItemTextViewLarge">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Large</item>
        <item name="android:textColor">?attr/textColorLarge</item>
    </style>

    <style name="ItemTaskLayout">
        <item name="android:background">?attr/layoutBackgroundColor</item>
    </style>

    <style name="ItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/space4</item>
        <item name="android:layout_marginStart">@dimen/space4</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="categoryTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/space16</item>
        <item name="android:layout_marginTop">@dimen/space16</item>
        <item name="android:layout_marginStart">@dimen/space8</item>
        <item name="android:drawablePadding">@dimen/space8</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Medium</item>
    </style>

    <style name="ItemLayoutRed" parent="ItemLayout">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="categoryTextView.White">
        <item name="android:colorAccent">@android:color/white</item>
    </style>

    <style name="categoryTextView.White.Large">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Large</item>
    </style>
  
    <style name="EditForPin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
